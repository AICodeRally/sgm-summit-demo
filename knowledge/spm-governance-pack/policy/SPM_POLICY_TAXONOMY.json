  "policies": [
    {
      "policy_id": "spm-pol-001",
      "policy_code": "SPM-POL-001",
      "title": "Exception Intake",
      "category": "Exception Management",
      "section": "Exception & Dispute Resolution",
      "order": 1,
      "domain_tags": ["SGM", "Exception", "Intake", "Workflow"],
      "authority_tier": "ApprovedPolicy",
      "severity": "HIGH",
      "scope": {
        "roles": ["Rep", "Manager", "SalesOps", "Finance", "Admin"],
        "entities": ["Exception", "Approval"]
      },
      "effective_start": "2026-01-01",
      "effective_end": "2026-12-31",
      "version": "1.0",
      "rule_text": "All exception requests must be submitted through the formal intake process with complete supporting documentation before review.",
      "rule_logic": {
        "conditions": [
          "request_type = 'exception'",
          "documentation_complete = true"
        ],
        "actions": [
          "create_exception_case",
          "assign_owner",
          "notify_approvers"
        ],
        "constraints": [
          "must_have_business_justification",
          "must_specify_policy_reference",
          "must_include_financial_impact"
        ],
        "enforcement": "Block"
      },
      "exceptions_allowed": false,
      "required_evidence": [
        "exception_request_form",
        "business_justification",
        "financial_impact_estimate",
        "manager_endorsement"
      ],
      "approval_chain": ["Direct Manager", "SalesOps", "Finance Approver"],
      "sla_hours": 24,
      "references": [
        {
          "doc_id": "D-003",
          "anchor": "Exception Process",
          "excerpt": "All exceptions must follow formal intake process"
        }
      ],
      "related_policies": ["SPM-POL-002", "SPM-POL-003", "D-003"],
      "detection_patterns": ["exception request", "approval request", "policy deviation"],
      "required_elements": [
        "Intake form completed",
        "Policy reference cited",
        "Business justification provided",
        "Financial impact quantified"
      ]
    },
    {
      "policy_id": "spm-pol-002",
      "policy_code": "SPM-POL-002",
      "title": "Exception Triage & Classification",
      "category": "Exception Management",
      "section": "Exception & Dispute Resolution",
      "order": 2,
      "domain_tags": ["SGM", "Exception", "Triage", "Classification"],
      "authority_tier": "ApprovedPolicy",
      "severity": "HIGH",
      "scope": {
        "roles": ["SalesOps", "Finance", "Admin"],
        "entities": ["Exception", "Classification"]
      },
      "effective_start": "2026-01-01",
      "effective_end": "2026-12-31",
      "version": "1.0",
      "rule_text": "All exception requests must be classified by type, severity, and financial impact within SLA to determine appropriate approval routing.",
      "rule_logic": {
        "conditions": [
          "exception_submitted = true",
          "classification_pending = true"
        ],
        "actions": [
          "classify_exception_type",
          "assess_severity",
          "calculate_financial_impact",
          "determine_approval_level"
        ],
        "constraints": [
          "classification_within_4_hours",
          "severity_determines_routing",
          "financial_threshold_determines_approver_level"
        ],
        "enforcement": "Block"
      },
      "exceptions_allowed": false,
      "required_evidence": [
        "classification_assessment",
        "severity_determination",
        "routing_decision"
      ],
      "approval_chain": ["SalesOps Analyst"],
      "sla_hours": 4,
      "references": [
        {
          "doc_id": "D-003",
          "anchor": "Exception Classification",
          "excerpt": "Exceptions must be classified before routing"
        }
      ],
      "related_policies": ["SPM-POL-001", "SPM-POL-003", "D-003"],
      "severity_matrix": {
        "low": { "financial_threshold": 5000, "approval_level": "Manager" },
        "medium": { "financial_threshold": 25000, "approval_level": "Director" },
        "high": { "financial_threshold": 100000, "approval_level": "VP" },
        "critical": { "financial_threshold": "unlimited", "approval_level": "CRB" }
      }
    },
    {
      "policy_id": "spm-pol-003",
      "policy_code": "SPM-POL-003",
      "title": "Exception Approval Workflow",
      "category": "Exception Management",
      "section": "Exception & Dispute Resolution",
      "order": 3,
      "domain_tags": ["SGM", "Exception", "Approval", "Workflow"],
      "authority_tier": "ApprovedPolicy",
      "severity": "HIGH",
      "scope": {
        "roles": ["Manager", "Director", "VP", "Finance", "CRB"],
        "entities": ["Exception", "Approval"]
      },
      "effective_start": "2026-01-01",
      "effective_end": "2026-12-31",
      "version": "1.0",
      "rule_text": "Exception approvals must follow the designated approval chain based on classification, with documented rationale at each step.",
      "rule_logic": {
        "conditions": [
          "exception_classified = true",
          "routing_determined = true"
        ],
        "actions": [
          "route_to_first_approver",
          "capture_approval_decision",
          "escalate_if_required",
          "log_decision"
        ],
        "constraints": [
          "sequential_approval_required",
          "all_approvers_must_decide",
          "rationale_required_for_each_decision"
        ],
        "enforcement": "Block"
      },
      "exceptions_allowed": false,
      "required_evidence": [
        "approval_decision",
        "approver_rationale",
        "timestamp"
      ],
      "approval_chain": ["Per Classification Matrix"],
      "sla_hours": 48,
      "related_policies": ["SPM-POL-001", "SPM-POL-002", "D-003"]
    },
    {
      "policy_id": "spm-pol-004",
      "policy_code": "SPM-POL-004",
      "title": "Dispute Intake",
      "category": "Dispute Resolution",
      "section": "Exception & Dispute Resolution",
      "order": 4,
      "domain_tags": ["SGM", "Dispute", "Intake", "Rep"],
      "authority_tier": "ApprovedPolicy",
      "severity": "HIGH",
      "scope": {
        "roles": ["Rep", "Manager", "SalesOps"],
        "entities": ["Dispute", "Crediting", "Payout"]
      },
      "effective_start": "2026-01-01",
      "effective_end": "2026-12-31",
      "version": "1.0",
      "rule_text": "All compensation disputes must be submitted through the formal dispute intake process with required evidence within 30 days of the transaction in question.",
      "rule_logic": {
        "conditions": [
          "dispute_type IN ('crediting', 'payout', 'quota', 'territory')",
          "submission_within_30_days = true"
        ],
        "actions": [
          "create_dispute_case",
          "validate_evidence",
          "assign_investigator",
          "acknowledge_receipt"
        ],
        "constraints": [
          "30_day_submission_window",
          "evidence_must_be_attached",
          "rep_must_acknowledge_process"
        ],
        "enforcement": "Block"
      },
      "exceptions_allowed": true,
      "exception_process": "SPM-POL-001",
      "required_evidence": [
        "dispute_form",
        "transaction_records",
        "supporting_documentation",
        "rep_statement"
      ],
      "approval_chain": ["SalesOps Analyst"],
      "sla_hours": 8,
      "related_policies": ["SPM-POL-005", "SPM-POL-006", "D-003", "B-001"]
    },
    {
      "policy_id": "spm-pol-005",
      "policy_code": "SPM-POL-005",
      "title": "Dispute Investigation",
      "category": "Dispute Resolution",
      "section": "Exception & Dispute Resolution",
      "order": 5,
      "domain_tags": ["SGM", "Dispute", "Investigation", "Evidence"],
      "authority_tier": "ApprovedPolicy",
      "severity": "HIGH",
      "scope": {
        "roles": ["SalesOps", "Finance", "Admin"],
        "entities": ["Dispute", "Evidence", "Investigation"]
      },
      "effective_start": "2026-01-01",
      "effective_end": "2026-12-31",
      "version": "1.0",
      "rule_text": "Dispute investigations must follow documented methodology, gather evidence from all systems of record, and complete within SLA.",
      "rule_logic": {
        "conditions": [
          "dispute_acknowledged = true",
          "investigator_assigned = true"
        ],
        "actions": [
          "gather_system_evidence",
          "interview_parties",
          "document_findings",
          "prepare_recommendation"
        ],
        "constraints": [
          "all_systems_of_record_checked",
          "chain_of_custody_maintained",
          "findings_documented"
        ],
        "enforcement": "Warn"
      },
      "exceptions_allowed": false,
      "required_evidence": [
        "crm_records",
        "icm_calculations",
        "booking_records",
        "communication_records"
      ],
      "approval_chain": ["SalesOps Manager"],
      "sla_hours": 72,
      "related_policies": ["SPM-POL-004", "SPM-POL-006", "D-003", "F-002"]
    },
    {
      "policy_id": "spm-pol-006",
      "policy_code": "SPM-POL-006",
      "title": "Dispute Ruling",
      "category": "Dispute Resolution",
      "section": "Exception & Dispute Resolution",
      "order": 6,
      "domain_tags": ["SGM", "Dispute", "Ruling", "Decision"],
      "authority_tier": "ApprovedPolicy",
      "severity": "HIGH",
