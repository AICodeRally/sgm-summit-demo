    {
      "policy_id": "spm-pol-010",
      "policy_code": "SPM-POL-010",
      "title": "Version Control & Audit Trail",
      "category": "Controls",
      "section": "Governance Controls",
      "order": 10,
      "domain_tags": ["SGM", "VersionControl", "Audit", "Compliance"],
      "authority_tier": "ApprovedPolicy",
      "severity": "HIGH",
      "scope": {
        "roles": ["SalesOps", "Finance", "Admin", "Auditor"],
        "entities": ["Version", "Audit", "Document"]
      },
      "effective_start": "2026-01-01",
      "effective_end": "2026-12-31",
