        "actions": [
          "issue_ruling",
          "cite_authority",
          "document_evidence",
          "provide_appeal_path",
          "log_decision"
        ],
        "constraints": [
          "authority_must_be_cited",
          "evidence_must_support_ruling",
          "appeal_path_required"
        ],
        "enforcement": "Block"
      },
      "exceptions_allowed": false,
      "required_evidence": [
        "investigation_report",
        "policy_citations",
        "evidence_summary",
        "ruling_rationale"
      ],
      "approval_chain": ["SalesOps Director", "Finance Approver"],
      "sla_hours": 24,
      "related_policies": ["SPM-POL-004", "SPM-POL-005", "D-003"]
    },
    {
      "policy_id": "spm-pol-007",
      "policy_code": "SPM-POL-007",
      "title": "Change Request Submission",
      "category": "Change Control",
      "section": "Plan Change Management",
      "order": 7,
      "domain_tags": ["SGM", "ChangeControl", "Submission", "Retro"],
      "authority_tier": "ApprovedPolicy",
      "severity": "HIGH",
      "scope": {
        "roles": ["SalesOps", "Finance", "HR"],
        "entities": ["ChangeControl", "Plan", "Policy"]
      },
      "effective_start": "2026-01-01",
      "effective_end": "2026-12-31",
      "version": "1.0",
      "rule_text": "All plan or policy changes must be submitted through the change control process with impact assessment and stakeholder analysis.",
      "rule_logic": {
        "conditions": [
          "change_type IN ('plan', 'policy', 'process', 'rate_table')",
          "impact_assessment_complete = true"
        ],
        "actions": [
          "create_change_request",
          "assess_impact",
          "identify_stakeholders",
          "determine_retroactivity"
        ],
        "constraints": [
          "impact_assessment_required",
          "retroactivity_flag_if_applicable",
          "stakeholder_notification_required"
        ],
        "enforcement": "Block"
      },
      "exceptions_allowed": false,
      "required_evidence": [
        "change_request_form",
        "impact_assessment",
        "stakeholder_list",
        "business_justification"
      ],
      "approval_chain": ["SalesOps Director", "Finance Director"],
      "sla_hours": 24,
      "related_policies": ["SPM-POL-008", "SPM-POL-009", "D-001"]
    },
    {
