      "rule_text": "All plan documents and policy changes must be versioned with immutable audit trail. Prior versions must be retained and accessible.",
      "rule_logic": {
        "conditions": [
          "document_modified = true"
        ],
        "actions": [
          "increment_version",
          "create_audit_entry",
          "archive_prior_version",
          "update_effective_dates"
        ],
        "constraints": [
          "versions_immutable",
          "audit_trail_complete",
          "prior_versions_accessible"
        ],
        "enforcement": "Block"
      },
      "exceptions_allowed": false,
      "required_evidence": [
        "version_history",
        "audit_log",
        "archived_documents"
      ],
      "sla_hours": 1,
      "related_policies": ["A-003", "F-002"]
    },
    {
      "policy_id": "spm-pol-011",
      "policy_code": "SPM-POL-011",
      "title": "Segregation of Duties",
      "category": "Controls",
      "section": "Governance Controls",
      "order": 11,
      "domain_tags": ["SGM", "SoD", "Controls", "Compliance"],
      "authority_tier": "ApprovedPolicy",
      "severity": "CRITICAL",
      "scope": {
        "roles": ["All"],
        "entities": ["Approval", "Execution", "Review"]
      },
      "effective_start": "2026-01-01",
      "effective_end": "2026-12-31",
      "version": "1.0",
      "rule_text": "No individual may both request and approve their own exception, dispute, or change. Approval chains must include independent review.",
      "rule_logic": {
        "conditions": [
          "action_type IN ('exception', 'dispute', 'change', 'payment')"
        ],
        "actions": [
          "validate_sod_compliance",
          "block_self_approval",
          "require_independent_review"
        ],
        "constraints": [
          "requester_cannot_approve",
          "independent_review_required",
          "manager_cannot_approve_own_team_self_serving"
        ],
        "enforcement": "Block"
      },
      "exceptions_allowed": false,
      "required_evidence": [
        "sod_validation_log",
        "approval_chain_audit"
      ],
      "sla_hours": 0,
      "related_policies": ["F-002", "SPM-POL-003", "SPM-POL-009"]
    },
    {
      "policy_id": "spm-pol-012",
      "policy_code": "SPM-POL-012",
      "title": "Evidence Standards",
      "category": "Controls",
      "section": "Governance Controls",
      "order": 12,
      "domain_tags": ["SGM", "Evidence", "Documentation", "Audit"],
      "authority_tier": "ApprovedPolicy",
      "severity": "HIGH",
      "scope": {
        "roles": ["All"],
        "entities": ["Evidence", "Documentation"]
      },
      "effective_start": "2026-01-01",
      "effective_end": "2026-12-31",
      "version": "1.0",
      "rule_text": "All governance decisions must be supported by evidence from systems of record. Evidence must include timestamps, record IDs, and chain of custody.",
      "rule_logic": {
        "conditions": [
          "decision_being_made = true"
        ],
        "actions": [
          "collect_evidence",
          "validate_source_system",
          "document_chain_of_custody",
          "attach_to_decision"
        ],
        "constraints": [
          "evidence_from_system_of_record",
          "timestamps_required",
          "record_ids_required"
        ],
        "enforcement": "Block"
      },
      "exceptions_allowed": false,
      "required_evidence": [
        "system_of_record_data",
        "timestamps",
        "record_identifiers"
      ],
      "sla_hours": 0,
      "related_policies": ["F-002", "SPM-POL-005", "SPM-POL-006"]
    },
    {
      "policy_id": "spm-pol-013",
      "policy_code": "SPM-POL-013",
      "title": "Precedent Management",
