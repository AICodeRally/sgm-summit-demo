    {
      "policy_id": "spm-pol-015",
      "policy_code": "SPM-POL-015",
      "title": "Governance Gap Escalation",
      "category": "Governance Framework",
      "section": "Governance Controls",
      "order": 15,
      "domain_tags": ["SGM", "Governance", "Gap", "Escalation"],
      "authority_tier": "ApprovedPolicy",
      "severity": "HIGH",
      "scope": {
        "roles": ["SalesOps", "Finance", "Legal", "CRB"],
        "entities": ["Gap", "Policy", "Escalation"]
      },
      "effective_start": "2026-01-01",
      "effective_end": "2026-12-31",
      "version": "1.0",
      "rule_text": "When policy is missing, ambiguous, or conflicting, the situation must be escalated as a GOVERNANCE_GAP deliverable with recommendation for resolution.",
      "rule_logic": {
        "conditions": [
          "policy_coverage = 'missing' OR policy_coverage = 'ambiguous' OR policy_coverage = 'conflicting'"
