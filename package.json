{
  "name": "sgm-summit-demo",
  "version": "0.1.0",
  "private": true,
  "description": "SGM (Sales Governance Manager) - Summit tier demo application",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "if [ -n \"$DATABASE_URL\" ]; then prisma generate; else echo \"Skipping prisma generate (DATABASE_URL missing)\"; fi && next build",
    "start": "next start -p 3002",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "tsx lib/tests/binding-mode.test.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:status": "prisma migrate status",
    "db:seed": "node prisma/seed.js",
    "db:studio": "prisma studio",
    "diagnostics": "tsx lib/scripts/diagnostics.ts",
    "postinstall": "if [ -n \"$DATABASE_URL\" ]; then prisma generate; else echo \"Skipping prisma generate (DATABASE_URL missing)\"; fi",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3003 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:all": "npm run build && electron-builder --mac --win --linux",
    "docker:build": "docker build -t sgm:latest .",
    "docker:run": "docker run -d -p 3003:3003 -v ~/SGM-Data:/data --name sgm sgm:latest",
    "portable:build": "node scripts/build-portable.js",
    "kb:check": "node scripts/check-kb.js",
    "kb:report": "node scripts/kbcc-report.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/adapter-pg": "^7.1.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@tailwindcss/typography": "^0.5.19",
    "@types/better-sqlite3": "^7.6.13",
    "@types/pg": "^8.16.0",
    "better-sqlite3": "^12.5.0",
    "date-fns": "^4.1.0",
    "formidable": "^3.5.4",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.562.0",
    "mammoth": "^1.11.0",
    "next": "^16.0.10",
    "next-auth": "^4.24.13",
    "pdf-parse": "^2.4.5",
    "pg": "^8.16.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-dropzone": "^14.3.8",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "xlsx": "^0.18.5",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@prisma/client": "^6.19.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/formidable": "^3.4.6",
    "@types/node": "^25.0.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "pkg": "^5.8.1",
    "postcss": "^8.5.6",
    "prisma": "^6.19.1",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "build": {
    "appId": "com.bhg.sgm",
    "productName": "SGM",
    "copyright": "Copyright Â© 2026 BHG Analytics",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      ".next/**/*",
      "electron/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/@prisma/engines",
      "!node_modules/.cache"
    ],
    "extraResources": [
      {
        "from": "prisma/schema.prisma",
        "to": "app/prisma/schema.prisma"
      }
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "electron/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "SGM Installer"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "electron/icon.ico",
      "uninstallerIcon": "electron/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/icon.png",
      "category": "Office"
    },
    "publish": null
  }
}
